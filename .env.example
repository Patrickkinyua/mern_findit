# Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGO_URI=mongodb://username:password@localhost:27017/mern_findit
# Or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/mern_findit

# JWT Secret (use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Node Environment
NODE_ENV=development
# Set to "production" for production deployment

# Server Port
PORT=5001

# Cloudinary Configuration (for media uploads)
# Sign up at https://cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (for future password reset email feature)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Frontend URL (for CORS in production)
# FRONTEND_URL=http://localhost:3000

